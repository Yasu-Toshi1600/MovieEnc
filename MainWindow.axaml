<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="490" d:DesignHeight="450"
        x:Class="SampleApp.MainWindow"
        Width="490"
        Title="SampleApp"
        
        Background="#f3f3f3">
        <StackPanel>
        <Grid >
                <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                
                
                <Border Grid.Row="0" Background="#ffffff"
                        CornerRadius="6"
                        Padding="10"
                        BorderThickness="1"
                        BorderBrush="#ddd"
                        DragDrop.AllowDrop="True"
                        Width="460"
                        VerticalAlignment="Top"
                        HorizontalAlignment="Left"
                        Margin="16,32,0,0">
                        
                        <StackPanel >
                                <TextBlock Text="動画ファイルを選択:" FontFamily="Yu Gothic UI"  />
                                <DockPanel Margin="0,8,0,0">
                                        <TextBox x:Name="FilePathTextBox" 
                                                Width="350" 
                                                IsReadOnly="True"
                                        />
                                        <Button Content="参照" 
                                        Click="file_ref" 
                                                Margin="8,0,0,0"
                                                Width="80"
                                                HorizontalContentAlignment="Center"/>
                                </DockPanel>
                        </StackPanel>
                </Border>
                <Border Grid.Row="1" Background="#ffffff"
                        CornerRadius="6"
                        Padding="10"
                        BorderThickness="1"
                        BorderBrush="#ddd"
                        Width="460"
                        VerticalAlignment="Top"
                        HorizontalAlignment="Left"
                        Margin="16,4,0,0">
                        <StackPanel>
                                <TextBlock Text="動画の保存先を選択:" />
                                <DockPanel Margin="0,8,0,0">
                                        <TextBox x:Name="FolderPathTextBox" 
                                                Width="350" 
                                                IsReadOnly="True"/>
                                        <Button Content="参照" 
                                                Click="folder_ref" 
                                                Margin="8,0,0,0"
                                                Width="80"
                                                HorizontalContentAlignment="Center"/>
                                </DockPanel>
                        </StackPanel>
                </Border>
                <Label Content="動画ファイル設定" 
                       FontWeight="Bold"
                       Margin="16,8,0,0"></Label>
        </Grid>
        <Grid>
                <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <Label Content="エンコード設定" 
                       FontWeight="Bold"
                       Margin="16,16,0,0"></Label>
                <Border Grid.Row="0" Background="#ffffff"
                        CornerRadius="6"
                        Padding="10"
                        BorderThickness="1"
                        BorderBrush="#ddd"
                        DragDrop.AllowDrop="True"
                        Width="460"
                        VerticalAlignment="Top"
                        HorizontalAlignment="Left"
                        Margin="16,40,0,0"
                ></Border>
        </Grid>
        </StackPanel>
        
</Window>
