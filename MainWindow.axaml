<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="490" d:DesignHeight="490"
        x:Class="MovieEnc.MainWindow"
        Width="493"
        Height="590"
        Title="MovieEnc_v2.0.2"
        Background="#f3f3f3">
        <StackPanel>
        <Grid >
                <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                
                
                <Border Grid.Row="0" Background="#ffffff"
                        CornerRadius="6"
                        Padding="10"
                        BorderThickness="1"
                        BorderBrush="#ddd"
                        DragDrop.AllowDrop="True"
                        Width="460"
                        VerticalAlignment="Top"
                        HorizontalAlignment="Left"
                        Margin="16,44,0,0">
                        
                        <StackPanel >
                                <TextBlock Text="動画ファイルを選択:" FontFamily="Yu Gothic UI"  />
                                <DockPanel Margin="0,8,0,0">
                                        <TextBox x:Name="FilePathTextBox" 
                                                Width="350" 
                                                IsReadOnly="False"
                                        />
                                        <Button Content="参照" 
                                        Click="file_ref" 
                                                Margin="8,0,0,0"
                                                Width="80"
                                                Background="#ffffff"
                                                BorderThickness="1,1,1,2"
                                                CornerRadius="6"
                                                BorderBrush="#ddd"
                                                HorizontalContentAlignment="Center"/>
                                </DockPanel>
                        </StackPanel>
                </Border>
                <Border Grid.Row="1" Background="#ffffff"
                        CornerRadius="6"
                        Padding="10"
                        BorderThickness="1"
                        BorderBrush="#ddd"
                        Width="460"
                        VerticalAlignment="Top"
                        HorizontalAlignment="Left"
                        Margin="16,4,0,0">
                        <StackPanel>
                                <TextBlock Text="動画の保存先を選択:" />
                                <DockPanel Margin="0,8,0,0">
                                        <TextBox x:Name="FolderPathTextBox" 
                                                Width="350" 
                                                IsReadOnly="False"/>
                                        <Button Content="参照" 
                                                Click="folder_ref"
                                                Background="#ffffff"
                                                CornerRadius="6"
                                                BorderThickness="1,1,1,2"
                                                BorderBrush="#ddd"
                                                Margin="8,0,0,0"
                                                Width="80"
                                                HorizontalContentAlignment="Center"/>
                                </DockPanel>
                        </StackPanel>
                </Border>
                <Label Content="動画ファイル設定" 
                       FontWeight="Bold"
                       Margin="16,16,0,0"></Label>
        </Grid>
        <Grid>
                <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <Label Content="エンコード設定" 
                       FontWeight="Bold"
                       Margin="16,16,0,0"></Label>
                <Border Grid.Row="0" Background="#ffffff"
                        CornerRadius="6"
                        Padding="10"
                        BorderThickness="1"
                        BorderBrush="#ddd"
                        Width="460"
                        VerticalAlignment="Top"
                        HorizontalAlignment="Left"
                        Margin="16,44,0,0">
                        
                        <StackPanel Orientation="Horizontal" Spacing="16">
                                <TextBlock Text="エンコード品質       "
                                           VerticalAlignment="Center"/>
                                <RadioButton x:Name ="Radio1080p" Content="1080p" GroupName="EncodeOption" />
                                <RadioButton x:Name ="Radio720p" Content="720p" GroupName="EncodeOption"/>
                                <RadioButton x:Name ="Radio480p" Content="480p" GroupName="EncodeOption"/>
                                <RadioButton x:Name ="Radio9_5MB" Content="9.5MB" GroupName="EncodeOption"/>
                        </StackPanel>
                </Border>
                <StackPanel Grid.Row="1" Orientation="Horizontal" Spacing="8">
                        <Border  
                                Background="#ffffff"
                                CornerRadius="6"
                                Padding="10"
                                BorderThickness="1"
                                BorderBrush="#ddd"
                                Width="226"
                                VerticalAlignment="Top"
                                HorizontalAlignment="Left"
                                Margin="16,4,0,0">
                                <DockPanel VerticalAlignment="Center" Margin="0,0">
                                        <TextBlock Text="NVENCを使用する"
                                                   VerticalAlignment="Center"/>
                                        <ToggleSwitch x:Name="NvencSwitch"
                                                      IsChecked="True"
                                                      VerticalAlignment="Stretch"
                                                      HorizontalAlignment="Right"
                                                      Margin="46,0,8,0"/>
                                
                                </DockPanel>
                        </Border>
                        <Border Background="#ffffff"
                                CornerRadius="6"
                                Padding="10"
                                BorderThickness="1"
                                BorderBrush="#ddd"
                                Width="226"
                                VerticalAlignment="Top"
                                HorizontalAlignment="Right"
                                Margin="0,4,0,0">
                                <DockPanel VerticalAlignment="Center" Margin="0,0">
                                        <TextBlock Text="自動エンコード"
                                                   VerticalAlignment="Center"/>
                                        <ToggleSwitch x:Name="AutoEncodeSwitch"
                                                      IsChecked="True"
                                                      VerticalAlignment="Stretch"
                                                      HorizontalAlignment="Right"
                                                      Margin="78,0,0,0"
                                                      />
                                </DockPanel>
                                
                        </Border>
                </StackPanel>
        </Grid>
                <Button
                        Content="エンコード開始"
                        FontSize="32"
                        Click="OnEncodeStart"
                        Margin="16,16,0,0"
                        Background="#58c8d2"
                        FontWeight="Bold"
                        Foreground="White"
                        HorizontalContentAlignment="Center"
                        VerticalContentAlignment="Center"
                        Width="460"
                        Height="80"
                        CornerRadius="12"
                        BorderThickness="1,1,1,2"
                        BorderBrush="#ddd" 
                        />
                <WindowNotificationManager x:Name="ControlNotifications" />
        </StackPanel>
        

</Window>
